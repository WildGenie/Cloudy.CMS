<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Version>1.0.0</Version>
    <Authors>Björn Ali Göransson</Authors>
    <Company />
    <Description>Cloudy CMS UI</Description>
    <Copyright>2018 Björn Ali Göransson</Copyright>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <RepositoryUrl>https://github.com/cloudy-cms/Cloudy.CMS.git</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="ChangesAppSupport\Scripts\changes-app.js" />
    <None Remove="ContentAppSupport\Scripts\content-app.js" />
    <None Remove="SitesAppSupport\Scripts\sites-app.js" />
    <None Remove="startup.js" />
    <None Remove="TreeAppSupport\Scripts\tree-app.js" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="ChangesAppSupport\Scripts\changes-app.js" />
    <EmbeddedResource Include="ContentAppSupport\Scripts\content-app.js" />
    <EmbeddedResource Include="SitesAppSupport\Scripts\sites-app.js" />
    <EmbeddedResource Include="NaggingSupport\nagging.js" />
    <EmbeddedResource Include="TreeAppSupport\Scripts\tree-app.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FastMember" Version="1.4.1" />
    <PackageReference Include="Poetry.UI" Version="2.88.1" />
    <PackageReference Include="Poetry.UI.DataTableSupport" Version="2.88.1" />
    <PackageReference Include="Poetry.UI.FormSupport" Version="2.88.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Cloudy.CMS\Cloudy.CMS.csproj" />
  </ItemGroup>

</Project>
